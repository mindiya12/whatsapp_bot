    {
      "parameters": {
        "jsCode": "function escapeXml(str = '') {\n  return str\n    .replace(/&/g, '&amp;')\n    .replace(/</g, '&lt;')\n    .replace(/>/g, '&gt;')\n    .replace(/\"/g, '&quot;')\n    .replace(/'/g, '&apos;');\n}\n\nconst first = $input.first().json;\nconst replyText = first.replyText ?? first.staticText ?? '';\n\nconst twiml =\n  `<?xml version=\"1.0\" encoding=\"UTF-8\"?>` +\n  `<Response><Message>${escapeXml(replyText)}</Message></Response>`;\n\nreturn [{ json: { twiml } }];\n"
      },
