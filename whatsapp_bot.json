    {
      "parameters": {
        "jsCode": "function pickFirstRow(items) {\n  if (!items || items.length === 0) return null;\n  return items[0].json;\n}\n\nconst input = $input.all();\nconst first = $input.first().json;\n\n// If staticText is present (mainMenu or agent), just use it\nif (first.staticText) {\n  return [{ json: { ...first, replyText: first.staticText } }];\n}\n\n// If this item has price/availability, treat it as bike-details from the sheet\nconst row = pickFirstRow(input) || first;\n\nif (row.price !== undefined || row.availability !== undefined) {\n  const bikeName = row.bike_name || 'Selected bike';\n\n  const price = row.price || '';\n  const availability = row.availability || '';\n  const financing = row.financing || '';\n  const engine = row.engine || '';\n  const transmission = row.transmission || '';\n  const features = row.features || '';\n  const fuel = row['fuel'] || row['fuel '] || '';\n\n  const replyText =\n`${bikeName}\n\nPrice: ${price}\nAvailability: ${availability}\nFinancing: ${financing}\n\nEngine:\n${engine}\n\nTransmission:\n${transmission}\n\nFuel:\n${fuel}\n\nKey features:\n${features}\n\nReply MENU to see other bikes.`;\n\n  return [{ json: { ...row, replyText } }];\n}\n\n// Fallback (only if neither menu nor bike row)\nconst replyText = 'Sorry, something went wrong. Reply MENU to start again.';\nreturn [{ json: { ...first, replyText } }];\n"
      },
