    {
      "parameters": {
        "jsCode": "const item = $input.first().json;\nconst data = item.body || {};\n\nconst textRaw = (data.Body || '').trim();\nconst text = textRaw.toLowerCase();\n\nconst bikes = {\n  \"1\": \"HF Deluxe\",\n  \"2\": \"Xtreme 125R\",\n  \"3\": \"Hunk 160R 4V\",\n  \"4\": \"Xoom 110\",\n  \"5\": \"Xoom 110 CE\",\n  \"6\": \"Xoom 125R\",\n};\n\nconst mainMenu =\n`Welcome to ABC Bikes.\nReply with a number:\n1. HF Deluxe\n2. Xtreme 125R\n3. Hunk 160R 4V\n4. Xoom 110\n5. Xoom 110 CE\n6. Xoom 125R\n7. Call agent`;\n\n// Reset keywords → always show main menu\nif (['hi','hello','start','menu','0'].includes(text)) {\n  return [{ json: { mode: 'mainMenu', staticText: mainMenu } }];\n}\n\n// If user chooses a bike (1–6), go straight to details\nif (text >= '1' && text <= '6') {\n  const bikeName = bikes[text] || 'Selected bike';\n  return [{\n    json: {\n      mode: 'bikeDetails',\n      bike_id: text,\n      bike_name: bikeName,\n    }\n  }];\n}\n\n// Call agent\nif (text === '7') {\n  return [{\n    json: {\n      mode: 'agent',\n      staticText: 'Call our sales agent at +94XXXXXXXX.\\nHours: 10:00–18:00.\\nReply MENU to see bikes again.',\n    }\n  }];\n}\n\n// Fallback\nreturn [{\n  json: {\n    mode: 'mainMenu',\n    staticText: `Please reply with 1–7.\\n\\n${mainMenu}`,\n  }\n}];\n"
      },
